.search-dialog
  position: fixed
  top: 3em
  left: 50%
  z-index: 1001
  display: none
  margin-left: -280px
  padding: 20px
  width: 50em
  font-size: 110%
  border-radius: 1em
  background: var(--search-bg)
  animation: titlescale .5s

  +maxWidth768()
    top: 0
    left: 0
    margin: 0
    width: 100%
    height: 100%
    border-radius: 0

  hr
    margin: 20px auto

  span.search-close-button
    position: absolute
    top: 16px
    right: 35px
    color: $grey
    font-size: 1.7em
    line-height: 1
    cursor: pointer
    transition: color .2s ease-in-out

    &:hover
      color: $search-color

  &__title
    padding: 0 8px 14px
    color: $search-color
    font-size: 1.4em
    line-height: 1

#search-mask
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 1000
  display: none
  background: rgba($dark-black, .6)