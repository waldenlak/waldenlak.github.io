.relatedPosts
  margin-top: 40px

  & > .headline
    margin-bottom: 5px
    font-weight: 700
    font-size: 1.43em

  & > .relatedPosts-list
    & > div
      position: relative
      display: inline-block
      overflow: hidden
      margin: 3px
      width: calc(25% - 6px)
      height: 8em
      border-radius: .5em
      vertical-align: bottom

      &:hover
        .cover
          opacity: 0
          transform: scale(1.1)

      +maxWidth768()
        margin: 2px
        width: calc(50% - 4px)
        height: 150px

      +maxWidth600()
        width: calc(100% - 4px)

    .cover
      width: 100%
      height: 100%
      border-radius: .5em
      opacity: .2
      transition: all .6s
      object-fit: cover

    .content
      position: absolute
      top: 50%
      padding: 0 20px
      width: 100%
      transform: translate(0, -50%)

      .date
        color: var(--light-grey)
        font-size: 90%

      .title
        @extend .limit-more-line
        font-size: 120%
        color: var(--font-color)
        -webkit-line-clamp: 2
