#footer
  position: relative
  background: #e4edff
  background-attachment: local
  background-position: bottom
  background-size: cover

  if hexo-config('footer_bg') != false
    &:before
      position: absolute
      width: 100%
      height: 100%
      background-color: alpha($dark-black, .1)
      content: ''

#footer-wrap
  position: relative
  padding: 40px 20px
  color: #777371
  text-align: center

  a
    color: #777371

    &:hover
      text-decoration: none
      color: #ff7171cc

  .footer-info
    margin: 0 2px

  .icp-icon
    padding: 0 4px
    max-height: 1.4em
    width: auto
    vertical-align: text-bottom
