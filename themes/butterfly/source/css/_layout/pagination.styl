#pagination
  .pag
    margin: 3em
    text-align: center

  .page-number
    &.current
      background: $theme-paginator-color
      font-size: 110%
      color: var(--white)

  .pagination-info
    position: absolute
    top: 50%
    width: 100%
    transition: all .6s
    transform: translate(0, -50%)

  .prev_info,
  .next_info
    @extend .limit-one-line
    color: $grey
    font-weight: 500
    font-size: 1.5em
    transition: all .4s ease !important

  .next-post
    .pagination-info
      text-align: right

  .pull-full
    width: 100% !important

  .prev-post .label,
  .next-post .label
    text-transform: uppercase
    font-size: 90%

  .prev-post,
  .next-post
    width: 50%

    +maxWidth768()
      width: 100%

    a
      position: relative
      display: block
      overflow: hidden
      height: 6em
      margin: 0 1rem
      transition: all 1s ease !important

    &:hover
      background-color: var(--search-bg)
      border-radius: .8em
      .prev_info,
      .next_info
        color: var(--font-color)

  &.pag-post
    overflow: hidden

.after
  & > .recent-posts
    .pag
      & > *
        @extend .cardHover
        display: inline-block
        margin: 3em .5rem 5em
        width: w = 2em
        height: w
        line-height: w

        &:hover
          background: var(--btn-hover-color)
          color: var(--btn-color)

  & > div:not(.recent-posts)
    .pag
      .page-number
        display: inline-block
        margin: 3em
        min-width: w = 24px
        height: w
        text-align: center
        line-height: w
        cursor: pointer
